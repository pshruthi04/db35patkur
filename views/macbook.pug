extends layout

block content
  h1= title 
  p Search results macbook 
  p 
  - let items=[{"cost":999,"model":"MacBook Air","memory":16},{"cost":1299,"model":"MacBook Pro 13","memory":16},{"cost":1999,"model":"MacBook Pro 14","memory":64}]
    div(class='container-fluid')
    div(class='row m-1')
    div(class= "row row-cols-1 row-cols-sm-4 g-6")
      each item, index in items 
        - let destination = `dispatch(\"/macbook/update?id=${item._id}\")`
        div(class="card text-white bg-warning mb-3" class='col' class='card' class='card-body' class='card-text' onclick='buy('+index+')') Item #{item.cost}(#{item.model}) is #{item.memory}
          <br><br>
          button.btn( class="btn-success ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }        

  script.                
        function age(element)
        {
              alert(`macbooks rank is ${element+1}`)
        }